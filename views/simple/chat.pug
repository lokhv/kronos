extends ../layoutsimplechat

block content
  link(href='https://cdnjs.cloudflare.com/ajax/libs/tippy.js/2.5.4/tippy.css')
  style.
      .btn-primary {
        background-color: #ca8500 !important;
        border-color: #ca8500 !important;
        font-size:21px;
      }
      
      .btn-primary:hover, .btn-primary:active, .btn-primary:focus {
        background-color: #e79f16 !important;
        border-color: #e79f16 !important;
      }

      .file-upload-input {
        position: absolute;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        outline: none;
        opacity: 0;
        cursor: pointer;
      }

      .upload-wrap {
        margin-top: 20px;
        border: 2px dashed #d19e12;
        background-color: #111;
        position: relative;
        cursor: pointer;
        border-radius:15px;
      }

      .image-dropping,
      .upload-wrap:hover {
        background-color: #000;
        border: 2px dashed #d19e12;
        cursor: pointer;
        border-radius:15px;
      }

      .drag-text {
        text-align: center;
        cursor: pointer;
      }

      .drag-text h3 {
        font-weight: 100;
        text-transform: uppercase;
        color: #FFF;
        padding: 60px 0;
        cursor: pointer;
        margin-top: 10px !important;
      }
      
      .hash {
        width: 80%;
        background-color: #222;
        border: 1px solid #444;
        border-radius: 0 15px 15px 0;
        padding: 5px;
        padding-left: 15px;
        color: #FFF;
      }
